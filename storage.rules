rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Admission documents - User uploads
    match /admissions/{admissionId}/{fileName} {
      // Public can upload documents (for admission applications)
      // File size limit: 10MB
      allow write: if request.resource.size < 10 * 1024 * 1024 &&
                      request.resource.contentType.matches('application/pdf|image/.*') &&
                      fileName.matches('.*\\.(pdf|jpg|jpeg|png)$');
      
      // Only admins can read/delete admission documents
      allow read, delete: if isAdmin();
      
      // Users can read their own documents (if we implement user tracking)
      // This would require storing userId with the admission
    }
    
    // Gallery images - Admin uploads
    match /gallery/{imageId} {
      // Only admins can upload gallery images
      allow write: if isAdmin() && 
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
      
      // Public can read gallery images
      allow read: if true;
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // News images - Admin uploads
    match /news/{newsId}/{imageName} {
      // Only admins can upload news images
      allow write: if isAdmin() && 
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
      
      // Public can read news images
      allow read: if true;
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // General uploads - Admin only
    match /uploads/{fileName} {
      // Only admins can upload/read/delete
      allow read, write, delete: if isAdmin();
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

